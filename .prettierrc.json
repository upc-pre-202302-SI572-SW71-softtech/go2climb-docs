{
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "consistent",
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "importOrder": ["<BUILTIN_MODULES>", "", "<THIRD_PARTY_MODULES>", "", "^[./]"],
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.hbs",
      "options": {
        "parser": "html"
      }
    }
  ]
}
